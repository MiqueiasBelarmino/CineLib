<p id="notice"><%= notice %></p>

<h1>Dirigidos por <%= params[:diretor]%></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ano</th>
      <th>Sinopse</th>
      <th>Diretor</th>
      <th>Nota</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme.nome %></td>
        <td><%= filme.ano %></td>
        <td><%= filme.sinopse %></td>
        <td><%= filme.diretor%></td>
        <td><%= filme.nota %></td>
        <td><%= link_to 'Mostrar', filme %></td>
        <td><%= link_to 'Editar', edit_filme_path(filme) %></td>
        <td><%= link_to 'Deletar', filme, method: :delete, data: { confirm: 'Confirma a exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

