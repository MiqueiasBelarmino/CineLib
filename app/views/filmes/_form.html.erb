<div class="container">
  <%= form_with(model: filme) do |form| %>

    

    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-xs-12">
          <% if filme.errors.any? %>
            <div class="alert alert-danger">
              Ops! Encontramos <%= pluralize(filme.errors.count, 'erro', 'erros') %>
              <ul>
                <% filme.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :nome %>
            <%= form.text_field :nome, class: 'form-control'  %>
          </div>
        
          <div class="form-group">
            <%= form.label :ano %>
            <%= form.number_field :ano, class: 'form-control'  %>
          </div>

          <div class="form-group">
            <%= form.label :sinopse %>
            <%= form.text_area :sinopse, class: 'form-control'  %>
          </div>

          <div class="form-group">
            <%= form.label :diretor %>
            <%= form.text_field :diretor, class: 'form-control'  %>
          </div>

          <div class="form-group">
            <%= form.label :nota %>
            <%= form.number_field :nota, class: 'form-control' %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>

      </div>
    </div>

  <% end %>
</div>
